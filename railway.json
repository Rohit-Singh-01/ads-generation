{
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "bash setup.sh && streamlit run app_modular.py --server.port=$PORT --server.address=0.0.0.0 --server.headless=true",
    "healthcheckPath": "/_stcore/health",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
